<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/jaguar"
        android:id="@+id/imgJaguar"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jaguar"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/caracteristicas"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            android:id="@+id/caracteristicas"
            android:paddingBottom="10dp"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caracteristicas"
            android:layout_centerHorizontal="true"
            android:id="@+id/velocidade"
            android:text="Velocidade Maxima: 322 km/h"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/velocidade"
            android:layout_centerHorizontal="true"
            android:id="@+id/aceleracao"
            android:text="Aceleração de 0 a 100 km/h: 3,7 segundos"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aceleracao"
            android:layout_centerHorizontal="true"
            android:id="@+id/consumo"
            android:text="Consumo: 7,3 km/l (cidade) - 13 km/l (estrada"/>

    </RelativeLayout>

</LinearLayout>